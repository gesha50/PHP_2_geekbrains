<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ title }}</title>
</head>
<body>
<div class="goodsItem">
{% for item in goods %}
    <div>
        <h4>{{ item.0 }}</h4>
        <a href="img/{{ item.2 }}"><img style='width: 300px;' src="img/{{ item.2 }}" alt=""></a>
        <p>{{ item.1 }}</p>
        <p>{{ item.3 }}р</p>
    </div>
{% endfor %}
</div>
<button onclick="showMore({{ id }})" >Показать ещё</button>

<script src="../vendor/components/jquery/jquery.min.js"></script>
<script src="js/js.js"></script>
</body>
</html>